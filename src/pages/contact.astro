---
import { Image } from "@astrojs/image/components"
import Layout from "@/layouts/Layout.astro"
import BreadcrumbHero from "@/components/BreadcrumbHero.astro"

import Pin from "/public/Icons/Pin.svg"
import Calendar from "/public/Icons/Calendar.svg"
import Hourglass from "/public/Icons/Hourglass.svg"
import Email from "/public/Icons/Email.svg"
import Phone from "/public/Icons/Phone.svg"
---

<Layout title="Contato">
  <BreadcrumbHero
  title="Contato"
  description="Saiba onde estamos, dê o seu feedback ou tire dúvidas conosco por aqui."
  page={{ name: "Contato", href: "/contact" }}
  img="/Hero/Soup.jpg"
  />
  
  <section class="max-w-[1024px] m-auto gap-16 flex flex-col lg:flex-row px-6 py-8 lg:py-16">
    <div class="gap-4 lg:gap-8 flex flex-col">
      <div class="w-full gap-6 flex flex-col">
        <h2>Localização</h2>
        <div class="gap-3 flex">
          <Image
          width={32}
          height={32}
          quality={50}
          src={Pin}
          alt="Ícone simples de um alfinete de mapa."
          class="w-[32px] h-[32px] object-cover"
          />
          <p>R. Marquês de Itu, 252 - Vila Buarque, São Paulo - SP, 01220-010</p>
        </div>
        <div class="gap-3 flex">
          <Image
          width={32}
          height={32}
          quality={50}
          src={Calendar}
          alt="Ícone simples de um calendário."
          class="w-[32px] h-[32px] object-cover"
          />
          <div class="gap-3 flex flex-col lg:flex-row">
            <p class="w-full">Segunda-Feira - Sábado</p>
            <p class="w-full">Nos Domingos, Aberto Apenas Nos Últimos Domingos Do Mês</p>
          </div>
        </div>
        <div class="gap-3 flex items-center">
          <Image
          width={32}
          height={32}
          quality={50}
          src={Hourglass}
          alt="Ícone simples de uma ampulheta."
          class="w-[32px] h-[32px] object-cover"
          />
          <p>12h00 - 02h00</p>
        </div>
      </div>
      <div class="gap-6 lg:gap-8 flex flex-col lg:flex-row">
        <div class="w-full gap-6 flex flex-col">
          <h2>Comunicação</h2>
          <div class="gap-3 flex items-center">
            <Image
            width={32}
            height={32}
            quality={50}
            src={Email}
            alt="Ícone simples de um calendário."
            class="w-[32px] h-full object-cover"
            />
            <a href="mailto:lepetitvillage@hotmail.com">lepetitvillage@hotmail.com</a>
          </div>
          <div class="gap-3 flex items-center">
            <Image
            width={32}
            height={32}
            quality={50}
            src={Phone}
            alt="Ícone simples de um calendário."
            class="w-[32px] h-full object-cover"
            />
            <p>(11) 3225 - 0234</p>
          </div>
          <div class="gap-3 flex items-center">
            <Image
            width={32}
            height={32}
            quality={50}
            src={Phone}
            alt="Ícone simples de um calendário."
            class="w-[32px] h-full object-cover"
            />
            <p>(11) 3331 - 3433</p>
          </div>
        </div>
      </div>
      
    </div>
    <div class="w-full h-full flex ">
      <iframe
      width="100%"
      height="500"
      style="border:0"
      loading="lazy"
      allowfullscreen
      referrerpolicy="no-referrer-when-downgrade"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyC_t3Xn1sCE-f7EQ2xN-9TJZuvYhdJLxkI&q=R.+Marquês+de+Itu,+252+-+Vila+Buarque,+São+Paulo+-+SP,+01220-010">
      </iframe> 
  </div>
  
</section>
</Layout>