  title="Cardápio"
  description="Bem-vindo ao nosso cardápio com nossas melhores refeições e bebidas. *Imagens meramente ilustrativas.*"
  page={{ name: "Cardápio", href: "/menu" }}
  img="/Hero/Soup.jpg"
  />
  
  <section class="max-w-[1024px] m-auto gap-6 flex flex-col px-6 py-8">
    <div class="gap-4 flex items-center">
      <Image
      width={40}
      height={40}
      src={CookingPot}
      alt="Ícones simples com três pessoas."
      class="w-[40px] h-full object-cover"
      />
      <h2>Refeições</h2>
      
    </div>
    <div class="gap-8 flex flex-col items-center lg:grid lg:auto-rows-max lg:grid-cols-2">
      {
        Dishes.map((dish) => (
        <div class="w-full h-full gap-4 flex flex-col items-center">
        <img class="w-full h-52 md:h-80 lg:h-64 rounded-2xl object-cover" src={dish.image} alt={dish.description}>
          <div class="w-full gap-2 flex flex-col">
            <h3>{dish.name}</h3>
            <p>{dish.description}</p>
            <div class="gap-3 flex items-center">
