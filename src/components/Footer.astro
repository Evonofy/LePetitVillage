---
import { Image } from "@astrojs/image/components"

import Calendar from "/public/Icons/Calendar.svg"
import Hourglass from "/public/Icons/Hourglass.svg"
import Email from "/public/Icons/Email.svg"
import Phone from "/public/Icons/Phone.svg"
---

<footer class="hidden w-full flex-col bg-zinc-800 py-16 lg:flex">
  <div class="m-auto flex max-w-[1024px] flex-col gap-6 px-4">
    <div class="flex gap-6">
      <div class="flex flex-col gap-4">
        <div class="flex items-center gap-3">
          <Image
            width={32}
            height={32}
            quality={50}
            src={Email}
            alt="Ícone simples de um calendário."
            class="h-full w-[32px] object-cover"
          />
          <a href="mailto:lepetitvillagespbr@gmail.com"
            >lepetitvillagespbr@gmail.com</a
          >
        </div>
        <div class="flex gap-3">
          <Image
            width={32}
            height={32}
            quality={50}
            src={Calendar}
            alt="Ícone simples de um calendário."
            class="h-[32px] w-[32px] object-cover"
          />
          <div class="flex flex-col gap-3 lg:flex-row">
            <p class="w-full">Segunda-Feira - Sábado</p>
            <p class="w-full">Aberto Apenas Nos Últimos Domingos Do Mês</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <Image
            width={32}
            height={32}
            quality={50}
            src={Hourglass}
            alt="Ícone simples de uma ampulheta."
            class="h-[32px] w-[32px] object-cover"
          />
          <p>12h00 - 02h00</p>
        </div>
        <div class="flex items-center gap-3">
          <Image
            width={32}
            height={32}
            quality={50}
            src={Phone}
            alt="Ícone simples de um calendário."
            class="h-full w-[32px] object-cover"
          />
          <p>(11) 3225 - 0234</p>
          <p>(11) 3331 - 3433</p>
        </div>
      </div>

      <div class="flex h-full w-full">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.690537299699!2d-46.64938722396967!3d-23.54363036094249!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce5848b135ae3d%3A0xa4e954a427e17fc0!2sR.%20Marqu%C3%AAs%20de%20Itu%2C%20252%20-%20Vila%20Buarque%2C%20S%C3%A3o%20Paulo%20-%20SP%2C%2001220-010!5e0!3m2!1spt-BR!2sbr!4v1687238371731!5m2!1spt-BR!2sbr"
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <a class="w-36" href="/">
        <Image
          width={612}
          height={320}
          quality={50}
          src="/LePetitLogo.png"
          format="png"
          alt="Ícone simples de um calendário."
          class="w-full"
        />
      </a>

      <div class="flex gap-4">
        <a
          target="_blank"
          href="https://www.facebook.com/LePetitVillageSPBR/?locale=pt_BR"
        >
          <div
            class="h-max rounded-full border-2 stroke-slate-400 p-3 transition-colors hover:bg-zinc-600"
          >
            <Image
              width={32}
              height={32}
              quality={50}
              src="/Icons/Facebook.svg"
              format="svg"
              alt="Ícone simples de um calendário."
              class="w-full"
            />
          </div>
        </a>

        <a target="_blank" href="https://www.instagram.com/lepetitvillagespbr/">
          <div
            class="h-max rounded-full border-2 stroke-slate-400 p-3 transition-colors hover:bg-zinc-600"
          >
            <Image
              width={32}
              height={32}
              quality={50}
              src="/Icons/Instagram.svg"
              format="svg"
              alt="Ícone simples de um calendário."
              class="w-full"
            />
          </div>
        </a>
      </div>

      <div class="flex flex-col">
        <p>© 2023 LePetit Village. Todos Direitos Reservados</p>
        <p class="text-right">
          Feito Por <a href="https://github.com/ThiagoThalisson"
            >Thiago Thalisson</a
          > E <a href="https://github.com/VitorGouveia">Vitor Gouveia</a>
        </p>
      </div>
    </div>
  </div>
</footer>
